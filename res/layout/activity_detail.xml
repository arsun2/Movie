<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sunaustin8.movies.DetailActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detailTextView"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:text="Title of the Article"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/idTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Author's Name"
                android:textStyle="italic"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailTextView"
                android:gravity="center_horizontal"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/detailImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idTextView"
                app:srcCompat="@mipmap/ic_launcher"
                android:gravity="center_horizontal"
                tools:layout_height="100dp"
                tools:layout_width="200dp" />

            <TextView
                android:id="@+id/bodyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum nc t facilisis. Praesent id finibus ligula, sit amet finibus purus. Quisque scelerisque enim a ante aliquam iaculis. Suspendisse gravida justo libero, quis tempor tellus semper quis. Etiam blandit erat eget velit volutpat, nec dignissim lacus maximus. Quisque sem purus, mollis in sem eget, vestibulum bibendum elit. Aliquam eleifend mattis mi eu facilisis. Sed feugiat nunc vel pretium ullamcorper. Aenean cursus placerat gravida.  Fusce ac porttitor nisl. Quisque non justo ornare, accumsan orci at, suscipit diam. Duis placerat lorem in orci ultricies consequat. Suspendisse iaculis nec nulla a eleifend. In hendrerit consequat accumsan. Donec at cursus purus. Phasellus convallis nunc id sem cursus, id suscipit augue eleifend.  "
                app:layout_constraintTop_toBottomOf="@+id/detailImageView"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:text="vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="39dp"
                tools:layout_editor_absoluteX="263dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailTextView"
                android:id="@+id/originalView" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>